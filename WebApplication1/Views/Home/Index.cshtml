
@model IEnumerable<WebApplication1.Models.Student>
@{
    ViewBag.Title = "View";
}

<h2>Students Data</h2>

<table border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stud in Model)
        {
            <tr>
                <td>@stud.Id</td>
                <td>@stud.Name</td>
                <td>@stud.Age</td>
                <td><a href="@Url.Action("Delete","Home",new {Id=stud.Id})">Delete</a> 
                <a href="@Url.Action("Update","Home",new { Id=stud.Id,Name=stud.Name,Age=stud.Age})">Update</a>
                </td>
            </tr>
        }
    </tbody>

</table>
@Html.ActionLink("Add New Student", "Insert", "Home")


